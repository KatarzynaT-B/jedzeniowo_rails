
<div class="span12">
<table class="table table-bordered">
  <thead>
      <tr>
        <th>
          <%= link_to('poprzedni', year_month: (@date.prev_month)) %>
        </th>
        <th><%= l @date, format: '%B' %></th>
        <th>
          <%= link_to('nastÄ™pny', year_month: (@date.next_month)) %>
        </th>
      </tr>
      <tr>
        <% (t 'date.weekdays').each do |day| %>
            <th><%= day %></th>
        <% end %>
      </tr>
  </thead>

  <tbody>
      <% @cal.all_days_for_month_view.each do |week| %>
          <tr>
              <% week.each do |day| %>
                  <td><%= l day,format: :short %></td>
              <% end %>
          </tr>
      <% end %>
  </tbody>
</table>
</div>
