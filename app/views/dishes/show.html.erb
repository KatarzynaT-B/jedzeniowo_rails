<% provide(:title, @dish.dish_name.titleize) %>
<div class="span12">
  <h3><%= @dish.dish_name.titleize %></h3>
    <table class="table table-hover">
        <caption>Wartość posiłku:</caption>
        <tr>
            <th>Kalorie</th>
            <th>Białko</th>
            <th>Tłuszcze</th>
            <th>Węglowodany</th>
        </tr>
        <tr>
            <td><%= "#{@dish.dish_calories} kcal" %></td>
            <td><%= "#{4.0 * @dish.dish_protein} kcal (#{@dish.dish_protein} g)" %></td>
            <td><%= "#{9.0 * @dish.dish_fat} kcal (#{@dish.dish_fat} g)" %></td>
            <td><%= "#{4.0 * @dish.dish_carbs} kcal (#{@dish.dish_carbs} g)" %></td>
        </tr>
    </table>
    <table class="table table-hover">
        <caption>Składniki:</caption>
        <tr>
            <th>Składnik</th>
            <th>Ilość</th>
            <th>Kalorie</th>
            <th>Białko</th>
            <th>Tłuszcze</th>
            <th>Węglowodany</th>
        </tr>
        <% @dish.ingredients.each do |ingredient| %>
            <tr>
                <td><%= ingredient.product.product_name %></td>
                <td><%= ingredient.quantity_per_dish %></td>
                <td><%= "#{ingredient.count_calories} kcal" %></td>
                <td><%= "#{ingredient.count_protein} g" %></td>
                <td><%= "#{ingredient.count_fat} g" %></td>
                <td><%= "#{ingredient.count_carbs} g" %></td>
            </tr>
        <% end %>
    </table>

    <table class="table table-hover">
      <caption>Wykonanie</caption>
      <tr><td><%= @dish.dish_steps %></td></tr>
    </table>


    <%= link_to "zmień", edit_dish_path(@dish), class: "btn btn-large btn-primary pull-right" %>
</div>