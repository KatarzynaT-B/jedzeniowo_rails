<% provide(:title, 'Nowe danie') %>
<div class="hero-unit">
    <h3 class="text-left">Dodaj przepis na danie</h3>
    <div class="row">
        <div class="span8 offset1">
            <%= nested_form_for @dish, html: { class: "form-horizontal" } do |f| %>
                <%= render 'form', f: f %>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit "Zapisz danie", class: "btn btn-large btn-primary pull-right" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
