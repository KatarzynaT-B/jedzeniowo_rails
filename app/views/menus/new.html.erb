<% provide(:title, 'Nowy jadłospis') %>
<div class="hero-unit">
    <h3 class="offset1 text-left">Dodaj jadłospis</h3>
    <div class="row">
        <div class="span10 offset2">
            <%= nested_form_for @menu, html: { class: "form-horizontal" } do |f| %>
                <%= render 'form', f: f %>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit "Zapisz jadłospis", class: "btn btn-large btn-primary offset4" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

