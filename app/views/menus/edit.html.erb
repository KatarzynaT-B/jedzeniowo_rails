<% provide(:title, (t '.subtitle')) %>
<div class="hero-unit">
  <h3 class="offset1 text-left"><% (t '.header.main') %></h3>
      <div class="row">
          <div class="span10 offset2">
            <%= nested_form_for @menu, html: { class: "form-horizontal" } do |f| %>
                <%= render 'form', f: f %>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit (t '.button.submit'), class: "btn btn-large btn-primary offset4" %>
                  </div>
                </div>
            <% end %>
          </div>
      </div>
</div>
