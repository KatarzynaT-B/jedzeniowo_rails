<% provide(:title, 'Edycja produktu') %>
<h3 class="text-left">Zmień dane produktu</h3>
<div class="row">
  <div class="span6 offset1">
    <%= form_for(@product) do |f| %>
        <%= render 'form', f: f %>
        <%= f.submit "Zapisz zmiany", class: "btn btn-large btn-primary" %>
    <% end %>
    <%= link_to "Wróć do listy produktów", products_path %>
  </div>
</div>