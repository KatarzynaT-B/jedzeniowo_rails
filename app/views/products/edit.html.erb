<% provide(:title, 'Edycja produktu') %>
<div class="hero-unit">
    <h3 class="text-left">Zmień dane produktu</h3>
    <div class="row">
      <div class="span7 offset1">
        <%= form_for @product, html: {class: "form-horizontal" } do |f| %>
            <%= render 'form', f: f %>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit "Zapisz zmiany", class: "btn btn-medium btn-primary" %>
                </div>
            </div>
        <% end %>
        <%= link_to "Wróć do listy produktów", products_path %>
      </div>
    </div>
</div>