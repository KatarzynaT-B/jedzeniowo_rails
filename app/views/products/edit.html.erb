<% provide(:title, (t '.subtitle')) %>
<div class="hero-unit">
    <h3 class="text-left"><%= t '.header.main' %></h3>
    <div class="row">
      <div class="span7 offset1">
        <%= form_for @product, html: {class: "form-horizontal" } do |f| %>
            <%= render 'form', f: f %>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit (t '.button.submit'), class: "btn btn-medium btn-primary" %>
                </div>
            </div>
        <% end %>
        <%= link_to (t '.link.index'), products_path %>
      </div>
    </div>
</div>