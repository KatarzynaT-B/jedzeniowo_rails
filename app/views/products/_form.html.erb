<%= render 'shared/error_messages', object: @product %>

<div class="form-group name">
    <%= f.label :product_name, "Nazwa produktu:", class: "col-md-3 control-label" %>
    <div class="col-md-3">
        <%= f.text_field :product_name %>
    </div>
</div>

<h4>Zawartość w 100 g:</h4>

<div class="amount_fields ">
    <div class="form-group amount">
        <%= f.label :product_protein, "białko", class: "col-md-6 control-label"  %>
        <div class="col-md-3 ">
            <%= f.text_field :product_protein %>
        </div>
    </div>
    <div class="form-group amount">
        <%= f.label :product_fat, "tłuszcze", class: "col-md-6 control-label"  %>
        <div class="col-md-3 ">
            <%= f.text_field :product_fat %>
        </div>
    </div>
    <div class="form-group amount">
        <%= f.label :product_carbs, "węglowodany", class: "col-md-6 control-label"  %>
        <div class="col-md-3 ">
            <%= f.text_field :product_carbs %>
        </div>
    </div>
</div>