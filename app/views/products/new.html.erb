<% provide(:title, 'Nowy produkt') %>
<div class="hero-unit">
    <h3 class="text-left">Dodaj produkt</h3>
    <div class="row">
        <div class="span7 offset1">
            <%= form_for @product, html: { class: "form-horizontal" } do |f| %>
                <%= render 'form', f: f %>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit "Zapisz produkt", class: "btn btn-medium btn-primary pull-right" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>