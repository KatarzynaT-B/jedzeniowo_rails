<li>
  <%= form_tag sessions_path, html: {class: "navbar-form navbar-right", role: 'form'} do %>
      <div class="form-group login">
        <%= text_field_tag :email, params[:email], class: "form-control login", placeholder: (t '.placeholders.email') %>
      </div>
      <div class="form-group login">
        <%= password_field_tag :password, nil, class: "form-control login", placeholder: (t '.placeholders.password') %>
      </div>
      <%= submit_tag (t '.button.submit'), class: "btn btn-success" %>
  <% end %>
</li>