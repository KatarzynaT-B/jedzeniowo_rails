<% provide(:title, @user.name) %>
<div class="page-header"><h1><%= (t '.header.main') %></h1></div>

<div class="jumbotron">
  <table>
    <tr>
      <th><%= (t '.table.name') %></th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th><%= (t '.table.email') %></th>
      <td><%= @user.email %></td>
    </tr>
  </table>
  <%= link_to (t '.link.edit'), edit_user_path(@user) %>
</div>


