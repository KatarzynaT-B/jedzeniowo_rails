<% provide(:title, @user.name) %>
<h3 class="text-left">Twoje dane:</h3>
<div class="span6 offset2">
  <table class="table table-hover">
    <tr>
      <th>Nazwa użytkownika:</th>
      <td>@user.name</td>
    </tr>
    <tr>
      <th>Adres email:</th>
      <td>@user.email</td>
    </tr>
  </table>
  <%= link_to "Zmień dane", edit_user_path(@user), class: "btn btn-primary" %>
</div>