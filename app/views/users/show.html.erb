<% provide(:title, @user.name) %>
<div class="page-header"><h1><%= (t '.header.main') %></h1></div>

<div class="jumbotron">
  <div class="table-responsive">
    <table class="table table-hover">
      <tr>
        <th><%= (t '.table.name') %></th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th><%= (t '.table.email') %></th>
        <td><%= @user.email %></td>
      </tr>
    </table>
  </div>
  <%= link_to (t '.link.edit'), edit_user_path(@user) %>
</div>


