<% provide(:title, @user.name) %>
<div class="hero-unit">
<h3>Twoje dane:</h3>

  <table class="table table-hover">
    <tr>
      <th>Nazwa użytkownika:</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>Adres email:</th>
      <td><%= @user.email %></td>
    </tr>
  </table>
  <%= link_to "Zmień dane", edit_user_path(@user), class: "btn btn-primary pull-right" %>

</div>