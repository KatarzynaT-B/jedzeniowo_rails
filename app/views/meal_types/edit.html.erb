<% provide(:title, 'Edycja typu posiłku') %>
<h3 class="text-left">Zmień typ posiłku</h3>
<div class="row">
  <div class="span6 offset1">
    <%= form_for(@meal_type) do |f| %>
        <%= render 'form', f: f %>
        <%= f.submit "Zapisz zmiany", class: "btn btn-large btn-primary" %>
    <% end %>
    <%= link_to "Wróć do listy typów", meal_types_path %>
  </div>
</div>