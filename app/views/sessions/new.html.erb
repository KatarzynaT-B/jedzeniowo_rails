<% provide(:title, (t '.subtitle')) %>
<h1><%= (t '.header.main') %></h1>

<div class="row">
  <div class="span4 offset4">
    <%= form_tag sessions_path do %>

        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>

        <%= submit_tag (t '.button.submit'), class: "btn btn-large btn-primary" %>
    <% end %>

    <p><%= (t '.paragraph.prompt') %><%= link_to (t '.link.add'), signup_path %></p>
  </div>
</div>