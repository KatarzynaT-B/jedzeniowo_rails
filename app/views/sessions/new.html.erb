<% provide(:title, "Logowanie") %>
<h1>Zaloguj się</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>

        <%= label_tag :email, "Adres email" %>
        <%= text_field_tag :email, params[:email] %>

        <%= label_tag :password, "Hasło" %>
        <%= password_field_tag :password %>

        <%= submit_tag "Zaloguj", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Nie masz konta? <%= link_to "Załóż je!", signup_path %></p>
  </div>
</div>


