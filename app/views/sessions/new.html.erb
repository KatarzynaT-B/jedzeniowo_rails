<% provide(:title, (t '.subtitle')) %>
<h1><%= (t '.header.main') %></h1>

    <%= form_tag sessions_path do %>
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>


        <%= label_tag :password %>
        <%= password_field_tag :password %>

        <%= submit_tag (t '.button.submit') %>
    <% end %>

    <p><%= (t '.paragraph.prompt') %><%= link_to (t '.link.add'), signup_path %></p>
